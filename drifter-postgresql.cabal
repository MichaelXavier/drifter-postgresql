name:                drifter-postgresql
version:             0.0.1
synopsis:            PostgreSQL support for the drifter schema migration tool
description:         Support for postgresql-simple Query migrations as well as arbitrary Haskell IO functions.
license:             MIT
license-file:        LICENSE
author:              Michael Xavier
maintainer:          michael@michaelxavier.net
category:            Database
build-type:          Simple
cabal-version:       >=1.10

flag lib-Werror
  default: False
  manual: True

library
  exposed-modules:   Drifter.PostgreSQL
  build-depends:       base >=4.6 && <4.8
                     -- TODO: loosen bounds
                     , postgresql-simple >= 0.4.10.0 && < 0.5
                     , drifter >= 0.1.0.1 && < 0.2
                     , time
                     , either
                     , mtl
  hs-source-dirs:      src
  default-language:    Haskell2010

  if flag(lib-Werror)
    ghc-options: -Werror

  ghc-options: -Wall


test-suite test
  type: exitcode-stdio-1.0
  main-is: Main.hs
  hs-source-dirs:     test
  default-language:   Haskell2010

  build-depends:    base
                  , drifter
                  , postgresql-simple
                  , drifter-postgresql
                  , tasty
                  , tasty-hunit
                  , either
                  , text

  if flag(lib-Werror)
    ghc-options: -Werror

  ghc-options: -Wall
